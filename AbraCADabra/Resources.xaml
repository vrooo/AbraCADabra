<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:local="clr-namespace:AbraCADabra">

    <Style TargetType="{x:Type GroupBox}">
        <Setter Property="Margin" Value="0,1,0,0"/>
    </Style>
    <Style TargetType="{x:Type Slider}">
        <Setter Property="Margin" Value="1,5,5,0"/>
    </Style>
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>
    <Style TargetType="{x:Type xctk:DecimalUpDown}">
        <Setter Property="Margin" Value="0,5,0,0"/>
        <Setter Property="FormatString" Value="F3"/>
    </Style>
    <Style TargetType="{x:Type xctk:ColorPicker}">
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>
    <Style TargetType="{x:Type TextBlock}" x:Key="TextBlockBasic">
        <Setter Property="Margin" Value="1,5,5,0"/>
    </Style>
    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Margin" Value="0,5,0,2"/>
    </Style>
    <Style TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="3,5,3,0"/>
        <Setter Property="Padding" Value="3"/>
    </Style>
    
</ResourceDictionary>